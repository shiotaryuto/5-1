<h1>商品一覧</h1>
<%= link_to "+", new_admin_item_path, class: "btn btn-primary btn-circle pull-right" %>

<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
    </tr>
  </thead>

<% @items.each do |item| %>
<tbody>
  <tr>
    <td><%= item.id %></td>
    <td><%= link_to item.name, admin_item_path(item.id) %></td>
    <td><%= item.price %></td>
    <td><%= item.genre.name %></td>
  </tr>
</tbody>
<% end %>
</table>

