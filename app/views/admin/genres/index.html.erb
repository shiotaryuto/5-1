<h1>ジャンル一覧・追加</h1>

<%= form_with model: @genre,url: admin_genres_path do |f| %>
<h2>ジャンル名</h2>
<div class="form-group">
 <%= f.text_field :name %>
</div>
<%= f.submit '新規登録', class: 'btn btn-sm btn-success' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>ジャンル</th>
    </tr>
  </thead>

  <% @genres.each do |genre| %>
   <tbody>
    <tr>
      <td> <%= genre.name %></td>
      <td>
        <%= link_to "編集", edit_admin_genre_path(genre.id), class: 'btn btn-sm btn-success' %>
      </td>
    </tr>
   </tbody>
  <% end %>
</table>