<h1>配送先登録/一覧</h1>
<%= form_with model: @address,url: public_addresses_path do |f| %>

<h2>郵便番号</h2>
 <%= f.text_field :postal_code %>
<h2>住所</h2>
 <%= f.text_area :address %>
<h2>宛名</h2>
 <%= f.text_field :name %>

 <%= f.submit "新規登録", class: 'btn btn-secondary' %>
<% end %>

 <table>
  <thead>
   <tr>
    <th>郵便番号</th>
    <th>住所</th>
    <th>宛名</th>
    <th colspan="3"></th>
   </tr>
  </thead>

  <% @addresses.each do |address| %>
  <tbody>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td><%= link_to "編集する", edit_public_address_path(address.id) %></td>
      <td><%= link_to "削除する", public_addresses_path, method: :delete, "data-confirm" => "本当に消しますか？", class: 'btn btn-sm btn-danger' %></td>
    </tr>
  </tbody>
  <% end %>
 </table>