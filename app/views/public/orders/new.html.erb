<h1>注文情報入力</h1>


<%= form_with model: @order, url: public_confirm_path ,method: :post do |f| %>
<h2>支払方法</h2>
<p><%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
<%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %></p>

<p><%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
<%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%></p>

<h2>お届け先</h2>
<p><%= f.radio_button :address_select, (0) %>
<%= f.label :address, [:ご自身の住所] %>
<%= current_customer.address %></p>

<p><%= f.radio_button :address_select, (1) %>
<%= f.label :address, [:登録済住所から選択] %>
<%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :name) %></p>

<p><%= f.radio_button :address_select, (2) %>
<%= f.label :address, [:登録済住所から選択] %></p>

<p>郵便番号(ハイフンなし)<%= f.text_field :postal_code %></p>
<p>住所<%= f.text_field :address %></p>
<p>宛名<%= f.text_field :name %></p>

<%= f.submit "確認画面へ進む" %>
<% end %>

