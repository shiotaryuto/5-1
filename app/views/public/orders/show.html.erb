<h1>注文履歴詳細</h1>

<h2>注文情報</h2>
<table>
    <thead>
      <th>注文日</th>
      <th>配送先</th>
      <th>支払方法</th>
    </thead>
    <tbody>
      <tr>
        <td><%= @order.created_at %></td>
        <td>〒<%= @order.postal_code %><%= @order.address %><%= @order.name %></td>
        <td><%= @order.payment_method %></td>

      </tr>
    </tbody>
  </table>

  <h2>請求情報</h2>
  <table>
    <thead>
      <th>商品合計</th>
      <th>送料</th>
      <th>請求金額</th>
    </thead>
    <tbody>
      <tr>
        <td><%= @order.billing_amount - @order.postage %></td>
        <td><%= @order.postage %></td>
        <td><%= @order.billing_amount %></td>
      </tr>
    </tbody>
  </table>

  <h2>注文内容</h2>
  <table>
    <thead>
      <th>商品</th>
      <th>単価</th>
      <th>個数</th>
      <th>小計</th>
    </thead>
    <% @order_details.each do |order_detail| %>
    <tbody>
      <tr>
        <td><%= order_detail.item.name %></td>
        <td><%= (order_detail.item.price * 1.1).floor %></td>
        <td><%= order_detail.amount %></td>
        <td><%= ((order_detail.item.price * order_detail.amount) * 1.1).floor %></td>
      </tr>
    </tbody>
  </table>
  <% end %>